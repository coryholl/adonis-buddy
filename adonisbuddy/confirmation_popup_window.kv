<ConfirmationPopupWindow>:
    background_color: (1.5, 1.5, 1.5, 0.75)
    pos_hint: {'x': 0.2, 'top': 0.6}
    separator_height: 0
    size_hint: (0.6, 0.2)
    auto_dismiss: False
    title_align: 'center'
    title_size: window_height // 45
    MDBoxLayout:
        orientation: 'horizontal'
        Widget:
        MDIconButton:
            id: confirmation_button_id
            icon: 'check-bold'
            icon_color: (0, 1, 0, 1)
            icon_size: window_height // 19
            md_bg_color: (0.3, 0.3, 0.3, 1)
            theme_icon_color: 'Custom'
        Widget:
        MDIconButton:
            id: cancel_button_id
            icon: 'close-thick'
            icon_color: (1, 0, 0, 1)
            icon_size: window_height // 19
            md_bg_color: (0.3, 0.3, 0.3, 1)
            theme_icon_color: 'Custom'
        Widget:
