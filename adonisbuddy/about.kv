            halign: 'center'
            size_hint_x: 0.9
            markup: True
    Label:
        text: 'LICENSE'
        size_hint_y: 0.05
        font_size: window_height // 45
    ScrollView:
        MDGridLayout:
            id: license_container_id
            cols: 1
            adaptive_height: True
